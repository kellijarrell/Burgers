<div class="container">
  <img src="../assets/images/burger.gif" />
  <br />
  <div class="container">
    <div class="row">
      <div class="col-sm-6">

        <h2 style="text-align: center;">Burgers that have not been eaten!</h2>
        <div class="card" style="width: 100%;">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="col-sm-6">
        <h2 style="text-align: center;">Burgers that have been eaten!</h2>
        <div class="card" style="width: 100%;">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
          </ul>
        </div>


      </div>
    </div>
    <h2>Add a Burger</h2>
    <div class="row">

      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Eaten!<br>
          <input type="radio" name="devoured" value="0"> Not Eaten
        </div>

        <button type="submit" class="btn btn-success" style="margin-bottom: 10px;">Add Burger</button>
      </form>
    </div>
  </div>
</div>